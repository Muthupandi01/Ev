<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_charge1"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:backgroundTint="@color/iosgrey"


        android:background="@drawable/publicchat_ev"

        app:cardElevation="@dimen/_4sdp"
        app:cardCornerRadius="@dimen/_16sdp"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35ssp"
                android:id="@+id/img_chrge"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:scaleType="fitXY"
                android:src="@drawable/ev_chrge_info_ev"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/muthu_text"
                android:layout_toRightOf="@id/img_chrge"
                android:text="Muthu"
                android:layout_marginTop="@dimen/_7sdp"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/_10ssp"
                android:layout_marginStart="@dimen/_5sdp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/two_text"

                android:layout_alignParentEnd="true"
                android:text="2 days ago"
                android:layout_marginTop="@dimen/_7sdp"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginEnd="@dimen/_5sdp"

                android:textSize="@dimen/_10ssp"
                android:layout_marginStart="@dimen/_5sdp"/>
            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:id="@+id/likeimg"
                app:tint="@color/green"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_toRightOf="@id/img_chrge"
                android:layout_below="@id/muthu_text"
                android:src="@drawable/baseline_thumb_up_alt_24_ev"
                android:layout_marginStart="@dimen/_5sdp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/muthu_text"
                android:id="@+id/succesful_teext"


                android:layout_toRightOf="@id/likeimg"
                android:text="Successfully Recharge"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/green"

                android:textSize="@dimen/_10ssp"
                android:layout_marginStart="@dimen/_5sdp"/>
            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:id="@+id/chimg"
                app:tint="@color/orange"


                android:layout_marginTop="@dimen/_7sdp"
                android:layout_toRightOf="@id/img_chrge"
                android:layout_below="@id/likeimg"
                android:src="@drawable/group_427318864_ev"
                android:layout_marginStart="@dimen/_5sdp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/succesful_teext"
                android:id="@+id/type2"

                android:layout_toRightOf="@id/chimg"
                android:text="Type2 Mennekes"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"

                android:textSize="@dimen/_10ssp"
                android:layout_marginStart="@dimen/_5sdp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/two_text"
                android:id="@+id/ukn_text"
                android:layout_marginEnd="@dimen/_5sdp"


               android:layout_alignParentEnd="true"
                android:text="UKN - 24136"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"

                android:textSize="@dimen/_10ssp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/chimg"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_toRightOf="@id/img_chrge"
                android:layout_marginEnd="@dimen/_5sdp"
                android:id="@+id/developer_text"



                android:text="I am Android Developer"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"

                android:textSize="@dimen/_10ssp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/de_img"
                android:layout_below="@id/developer_text"
                android:src="@drawable/ev_chrge_info_ev"
                android:layout_toRightOf="@id/img_chrge"
                android:layout_marginEnd="@dimen/_10sdp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/view"
                android:layout_toRightOf="@id/img_chrge"
                android:layout_below="@id/de_img"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/black"
                android:layout_marginEnd="@dimen/_10sdp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_below="@id/view"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/_10ssp"
                android:layout_toRightOf="@id/img_chrge"
                android:text="Reply"
                android:id="@+id/reply"
                android:layout_marginBottom="@dimen/_5sdp"
                app:tint="@color/gray_common"
                android:drawableStart="@drawable/reply_01_ev"
                android:layout_marginStart="@dimen/_5sdp"
                android:drawablePadding="@dimen/_5sdp"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_below="@id/view"
                android:layout_toRightOf="@id/reply"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/_10ssp"
                android:id="@+id/flag"
                android:text="Flag"
                app:tint="@color/gray_common"
                android:drawableStart="@drawable/flag_01_ev"
                android:layout_marginStart="@dimen/_30sdp"
                android:drawablePadding="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:gravity="center"/>
            

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
