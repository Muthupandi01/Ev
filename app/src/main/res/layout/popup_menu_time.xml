<!-- res/layout/popup_menu.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/_2sdp"
    android:background="@drawable/timeborder">

    <TextView
        android:id="@+id/item_family"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="09:30 AM"/>

    <TextView
        android:id="@+id/item_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="09:45 AM"/>

    <TextView
        android:id="@+id/item_colleague"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="10:00 AM"/>

    <TextView
        android:id="@+id/item_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="10:15 AM"/>
</LinearLayout>
