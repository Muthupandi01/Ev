<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">





    <LinearLayout
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/rectangle_34624331__1_ev"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">


        <LinearLayout
            android:layout_marginTop="@dimen/_8ssp"
            android:layout_marginHorizontal="@dimen/_2sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:background="@drawable/rectangle_34624332_ev"
                android:layout_margin="@dimen/_3sdp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout

                    android:layout_marginHorizontal="@dimen/dp_10"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/page_1_51_ev"/>



                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- TextView for the numeric value -->
                        <TextView
                            android:paddingHorizontal="@dimen/dp_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lineHeight="30dp"
                            android:layout_marginTop="@dimen/dp_2"
                            android:text="kWh"
                            android:textColor="@color/commontxtcolor"
                            android:textSize="@dimen/_10ssp" />

                        <!-- TextView for the unit -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lineHeight="30dp"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/dp_2"
                            android:text=" (40%)"
                            android:textColor="@color/commontxtcolor"
                            android:textSize="@dimen/_10ssp"/>
                    </LinearLayout>
                    <TextView
                        android:paddingHorizontal="@dimen/dp_5"
                        android:paddingVertical="@dimen/dp_5"
                        android:textSize="@dimen/_9ssp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="100"
                        android:textStyle="bold"

                        android:textColor="@color/black"
                        />


                </LinearLayout>





            </LinearLayout>
            <LinearLayout
                android:background="@drawable/rectangle_34624333_ev"
                android:layout_margin="@dimen/_3sdp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout

                    android:layout_marginHorizontal="@dimen/dp_10"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"

                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/clock_2_ev"/>



                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- TextView for the numeric value -->
                        <TextView
                            android:paddingHorizontal="@dimen/dp_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lineHeight="30dp"
                            android:layout_marginTop="@dimen/dp_2"
                            android:text="Duration"
                            android:textColor="@color/commontxtcolor"
                            android:textSize="@dimen/_10ssp" />

                        <!-- TextView for the unit -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lineHeight="30dp"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/dp_2"
                            android:text=""
                            android:textColor="@color/commontxtcolor"
                            android:textSize="@dimen/_12ssp"/>
                    </LinearLayout>
                    <TextView
                        android:paddingHorizontal="@dimen/dp_5"
                        android:paddingVertical="@dimen/dp_5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="2 hrs"
                        android:textSize="@dimen/_9ssp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        />


                </LinearLayout>





            </LinearLayout>
            <LinearLayout
                android:background="@drawable/rectangle_34624334_ev"
                android:layout_margin="@dimen/_3sdp"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_marginHorizontal="@dimen/dp_10"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/group_427318893_ev"/>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="@dimen/dp_5">

                        <!-- TextView for the numeric value -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lineHeight="30dp"
                            android:layout_marginTop="@dimen/dp_2"
                            android:text="Fee"
                            android:textColor="@color/commontxtcolor"
                            android:textSize="@dimen/_10ssp"
                            android:layout_marginEnd="@dimen/dp_2" />

                        <!-- TextView for the unit -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lineHeight="30dp"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/dp_2"
                            android:text=""
                            android:textColor="@color/commontxtcolor"
                            android:textSize="@dimen/_14ssp" />
                    </LinearLayout>
                    <TextView
                        android:paddingHorizontal="@dimen/dp_5"
                        android:paddingVertical="@dimen/dp_5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="UGX 73,000"
                        android:textSize="@dimen/_9ssp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        />


                </LinearLayout>





            </LinearLayout>






        </LinearLayout>



        <LinearLayout
            android:visibility="visible"
            android:id="@+id/timeLay1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginHorizontal="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.example.heptotech.customclass.BatteryViewHorizontal
                    android:id="@+id/battery_view"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_85sdp"
                    android:layout_gravity="center"
                    />
                <ImageView
                    android:layout_marginLeft="-5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/rectangle_34624106__1_ev"
                    android:visibility="visible" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textColor="#E8656565"
                    android:layout_margin="@dimen/_10ssp"
                    android:layout_width="0dp"
                    android:layout_weight="1.2"
                    android:layout_height="wrap_content"
                    android:text="Start Time"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="@dimen/_11ssp"/>
                <TextView
                    android:textColor="#E8656565"
                    android:layout_margin="@dimen/_10ssp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="End Time"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="@dimen/_11ssp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/addview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:orientation="vertical">




                <LinearLayout
                    android:background="@drawable/rectangle_34624335__1_ev"
                    android:visibility="visible"
                    android:weightSum="2"
                    android:layout_marginHorizontal="@dimen/_7sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!-- Start Time Dropdown -->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:id="@+id/start"
                            android:layout_margin="@dimen/_2sdp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">



                            <AutoCompleteTextView
                                android:id="@+id/autoCompleteStTime"
                                android:layout_margin="@dimen/_10ssp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:focusable="false"
                                android:hint="00:00 AM"
                                android:drawablePadding="@dimen/_5sdp"
                                android:drawableLeft="@drawable/clock__1__ev"
                                android:inputType="none"
                                android:backgroundTint="@android:color/transparent"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/poppins_medium"
                                android:textSize="@dimen/_11ssp"/>


                        </LinearLayout>

                        <!-- End Time Dropdown -->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:id="@+id/end"
                            android:background="#E6E6E6"
                            android:layout_margin="@dimen/_2sdp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">


                            <AutoCompleteTextView
                                android:id="@+id/autoCompleteEtTime"
                                android:layout_margin="@dimen/_10ssp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:focusable="false"
                                android:hint="00:00 AM"
                                android:drawablePadding="@dimen/_5sdp"
                                android:drawableLeft="@drawable/clock__1__ev"
                                android:inputType="none"
                                android:background="@color/transparent"
                                android:fontFamily="@font/poppins_medium"
                                android:textSize="@dimen/_11ssp"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/timeLay2"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_5sdp"
            android:paddingVertical="@dimen/_10ssp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_marginHorizontal="@dimen/_7sdp"
                android:layout_width="match_parent"
                android:background="@drawable/line_271_ev"
                android:layout_height="1dp"/>
            <TextView
                android:layout_marginHorizontal="@dimen/_7sdp"
                android:paddingHorizontal="@dimen/dp_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="@dimen/_7ssp"
                android:text="Select Slots"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_11ssp" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="@dimen/_5ssp"
                android:layout_marginHorizontal="@dimen/_7sdp"
                android:id="@+id/slotrec"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_marginHorizontal="@dimen/_5ssp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="@dimen/_5ssp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginTop="@dimen/_7ssp"
                    android:text="Available"
                    android:drawablePadding="@dimen/_5ssp"
                    android:drawableLeft="@drawable/ellipse_618_ev"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_8ssp" />
                <TextView
                    android:textAlignment="center"
                    android:layout_marginLeft="@dimen/_5ssp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginTop="@dimen/_7ssp"
                    android:text="Occupied"
                    android:drawablePadding="@dimen/_5ssp"
                    android:drawableLeft="@drawable/ellipse_619_ev"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_8ssp" />
                <TextView
                    android:layout_marginLeft="@dimen/_5ssp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginTop="@dimen/_7ssp"
                    android:text="Selected"
                    android:drawableTint="@color/greentxt"
                    android:drawablePadding="@dimen/_5ssp"
                    android:drawableLeft="@drawable/ellipse_619_ev"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_8ssp" />



                <LinearLayout
                    android:layout_marginTop="@dimen/_7ssp"
                    android:layout_marginLeft="@dimen/_5ssp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <com.example.heptotech.customclass.GradientView
                        android:layout_marginLeft="@dimen/_5ssp"
                        android:id="@+id/grad"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Suggestion"
                        android:drawablePadding="@dimen/_5ssp"
                        android:drawableLeft="@drawable/rectangleev_ev"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_8ssp" >


                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_gravity="center"
                            android:src="@drawable/circle_bg_ev"/>





                    </com.example.heptotech.customclass.GradientView>

                    <TextView
                        android:layout_marginLeft="@dimen/_5ssp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Suggestion"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_8ssp" />
                </LinearLayout>









            </LinearLayout>




        </LinearLayout>







    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>