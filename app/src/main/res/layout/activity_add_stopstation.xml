<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Route Plan"
        android:id="@+id/route_text"
        android:gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:textSize="@dimen/_12ssp"
        android:textColor="#000000"
        android:fontFamily="@font/poppins_medium"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:id="@+id/linear_status"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_below="@id/route_text"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/rectangle_34624345__1_ev"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/rectangle_34624345__1_ev"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_5sdp"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/rectangle_34624345__1_ev"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_5sdp"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/img"
            android:src="@drawable/rectangle_34624345__1_ev"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_5sdp"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/rectangle_34624345_ev"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_5sdp"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_status"
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/your_text"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/_10ssp"
        android:textColor="#0897FF"
        android:text="Your Plan"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginEnd="@dimen/_20sdp"/>
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_marginTop="@dimen/_20sdp"

        android:layout_below="@id/your_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_20sdp"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:id="@+id/save_text"
        android:text="Save"
        android:textSize="@dimen/_10ssp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"

        android:background="@drawable/rectangle_34624370__2_ev"
        android:layout_alignParentEnd="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/save_text"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"

           android:gravity="center"


            android:background="@drawable/rectangle_34624371__1_ev">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vector__4_ev"
                android:padding="@dimen/_5sdp"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:id="@+id/stop_texts"
                android:fontFamily="@font/poppins_medium"
                android:text="Stop Stations"
                android:textSize="@dimen/_10ssp"
                android:textColor="#263238"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>