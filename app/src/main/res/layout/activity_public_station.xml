<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Top Left ImageView -->




    <!-- Map Fragment -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <RelativeLayout
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">




        <ImageView
            android:background="@drawable/circular_background_ev"
            android:id="@+id/topLeftImage"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/arrow_left_circle_ev"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:tint="@color/greentxt" />

        <!-- Top Centered TextView -->
        <TextView
            android:background="@drawable/rectangle_34624587"
            android:id="@+id/topCenterText"
            android:backgroundTint="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_35sdp"
            android:text="Search This Area"
            android:gravity="center"
            android:textColor="@color/greentxt"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
           android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/poppins_regular" />
    </RelativeLayout>

    <!-- RelativeLayout for Buttons in the middle -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_above="@id/recyclerView">

        <!-- First Button -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/group"
            android:layout_marginTop="@dimen/_300sdp"
            android:src="@drawable/group_909" />

        <!-- Second Button Below First Button -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/group1"
            android:layout_below="@id/group"
            android:src="@drawable/group_427318908_2x" />

        <!-- Third Button Below Second Button -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/current_loction"
            android:layout_below="@id/group1"
            android:src="@drawable/group_427318907" />

        <!-- Fourth Button Below Third Button -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/current_loctions"
            android:layout_below="@id/current_loction"
            android:src="@drawable/group_427318907" />
    </RelativeLayout>

    <!-- SearchView and ScannerView at the Bottom -->
    <RelativeLayout
        android:id="@+id/bottom_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/_10sdp">

        <!-- SearchView on the Left -->
        <androidx.appcompat.widget.SearchView
            android:id="@+id/idSearchView"
            app:iconifiedByDefault="false"
            android:padding="@dimen/_10sdp"
            app:queryHint="Find EV Charger Station"
            app:searchIcon="@drawable/search_2x"
            android:layout_width="0dp"
            app:backgroundTint="@color/white"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/scannerView"
            android:layout_weight="1.2"
            android:background="@drawable/rectangle_343" />

        <!-- Scanner Icon to the Right of SearchView -->
        <ImageView
            android:background="@drawable/circular_background_ev"
            android:id="@+id/scannerView"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:scaleType="center"
            android:layout_marginStart="@dimen/_10sdp"
            android:contentDescription="Scan Icon"
            android:src="@drawable/qr_code__1__1_ev"
            app:tint="@color/greentxt" />
    </RelativeLayout>

    <!-- RecyclerView above SearchView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:layout_above="@id/bottom_container"
        android:background="@android:color/darker_gray" />

</RelativeLayout>
