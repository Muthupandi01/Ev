<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/black" /> <!-- Semi-transparent shadow color -->
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" />
        </shape>
    </item>

    <!-- Inner Circle -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/white" /> <!-- Circle background color -->
        </shape>
    </item>

</layer-list>
